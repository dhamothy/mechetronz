.me-{$container}{
    max-width: $container_width;
    padding-left: $container_gutter;
    padding-right: $container_gutter
    margin-left: auto;
    margin-right: auto;
    position: relative;
    z-index: 89;
    clearfix();
}
.me-{$section}{
	position: relative;

	&__{
		&title{
			text-transform: uppercase;
			margin-bottom: 60px;
			text-align: center;
			font-size: $size_md;
			letter-spacing: 6px;
		}
	}
	&--{
		&pull{
			margin: -60px 0;
			z-index: 20;
		}
		&push{
			padding: 120px 0;
			z-index: 18;
		}
		&img{
			background-color: $color_base;
			color: $color_white;
			background-repeat: no-repeat;
			background-position: center;
			background-attachment: fixed;
			background-size: cover;
			display: block;
			min-height: 60vh;
			
			+mq(gt-md){
				min-height: 80vh;
			}

			&:before{
		        content: '';
		        position: absolute;
		        top: 0;
		        bottom: 0;
		        right: 0;
		        left: 0;
		        z-index: 19;
		        background-color: rgba($color_black, .5);
		        display: block;
		    }

		    .me-{$section}__title{
		    	font-size: $size_h2;
		    	margin-top: 10vh;
		    	
		    	+mq(gt-md){
		    		margin-top: 20vh;
		    	}
		    }
		}
	}
}