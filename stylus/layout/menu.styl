.me-{$menu}{
	display: inline-block;
	vertical-align: middle;

	>li{
		display: inline-block;
		vertical-align: top;

		>a{
			padding: 6px 15px;						
			
			&:hover{
				color: $color_white;
			}
		}
	}				
	
	&__{
		
		&inner{
			position: relative;
			
			&:after{
				content: "";
				triangle-down(6px);
				display: inline-block;					
				margin-left: -15px;
				vertical-align: middle;
			}

			& ul{
				display: none;
				position: absolute;
				left: 15px;
			    top: 24px;
			    z-index: 111;
				padding: 3px 0;
			    background: #fff;
			    color: $color_black;
			    min-width: 120px;
			    border-radius: 2px;
			    box-shadow: 0 2px 2px 2px rgba(0, 0, 0, 0.12);

				& a{
					display: block;
					padding: 6px 12px;
					
					&:hover{
						background-color: rgba(0, 0, 0, 0.12);
					}
				}
			}
			&:hover{
				& ul{
					display: inline-block;
				}
			}
		}
	}
}