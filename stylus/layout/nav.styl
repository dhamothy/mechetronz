.me-{$nav}{
	
	>li{
		display: inline-block;
		vertical-align: top;

		>a{
			padding: 0 9px;
			display: inline-block;
			text-shadow: 1px 1px 2px rgba($color_black,.1);
			color: $color_white;
		}
	}
	&__{

		&inner{
			position: relative;
			white-space: nowrap;
			
			& > a{
				&:after{
					content: "";
					triangle-down(6px);
					display: inline-block;
					margin-left: 3px;
					vertical-align: middle;
				}
			}
			& ul{
				display: none;
				position: absolute;
			    top: 100%;
			    right: 9px;
			    z-index: 111;
				padding: 3px 0;
			    background: $color_white;
			    color: $color_base;
			    min-width: 120px;
			    border-radius: 2px;
			    box-shadow: 0 2px 2px 2px rgba($color_black, 0.12);
			    line-height: 1.5;

				& a{
					display: block;
					padding: 6px 12px;

					&:hover{
						background-color: #fde706;
					}
				}
			}
			&:hover{
				& ul{
					display: inline-block;
				}
			}
		}
	}
}