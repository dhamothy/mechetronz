.me-{$nav}{
	display: inline-block;
	vertical-align: middle;	

	>li{
		display: inline-block;
		vertical-align: top;

		>a{
			padding: 6px 15px;						
			display: inline-block;
			text-shadow: 1px 1px 2px rgba(0,0,0,.1);
			
			&:hover{
				color: $color_white;
			}
		}
	}				
	
	&__{
		
		&inner{
			position: relative;
			
			&:after{
				content: "";
				triangle-down(6px);
				display: inline-block;					
				margin-left: -15px;
				vertical-align: middle;
			}

			& ul{
				display: none;
				position: absolute;				
			    top: 100%;
			    right: 3px;
			    z-index: 111;
				padding: 3px 0;
			    background: #fff;
			    color: $color_base;
			    min-width: 120px;
			    border-radius: 2px;
			    box-shadow: 0 2px 2px 2px rgba(0, 0, 0, 0.12);

				& a{
					display: block;
					padding: 6px 12px;
					
					&:hover{
						background-color: #fde706;
					}
				}
			}
			&:hover{
				& ul{
					display: inline-block;
				}
			}
		}
	}
}