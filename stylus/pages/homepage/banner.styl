.me-{$banner}{
    min-height: 600px;
    position: relative;
    z-index: 9;
    background: $color_brand url(../images/wide/banner.jpg) no-repeat;
    background-size: cover;
    background-position: center;
    color: $color_white;
    font-weight: $weight_light;
    clearfix();

    &:before{
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        right: 0;
        left: 0;
        z-index: @z-index + 1;
        background-color: rgba($color_brand, .6);
        display: block;
    }

    &__{
        &content{
            padding: 240px 0 180px;
            position: relative;
            z-index: @z-index + 2;
            min-height: 500px;
            text-shadow: 1px 1px 2px rgba($color_black,.1);
        }
        &title{
            font-size: 72px;            
            // margin-bottom: 30px!important;
            font-weight: $weight_bold;            
        }
        &quote{
            font-size: $size_lg;        
            letter-spacing: 2px;
            font-weight: $weight_light;
            position: relative;

            &:before{
                content:'';
                display: block;
                position: absolute;
                right: 100%;
                top: 21px;
                margin-right: 9px;
                box(30px, 2px);
                border-radius: 2px;
                background-color: currentColor;
            }
        }
        &launch{
            font-size: 18px;
            margin-top: 21px;
            display: inline-block;
        }
    }
    a{
        color: inherit;
    }
}